    <bean id="hibernateProperties" 
          class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <prop key="hibernate.hbm2ddl.auto">validate</prop>
                <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
                <prop key="hibernate.query.substitutions">true 'T', false 'F'</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.c3p0.minPoolSize">5</prop>
                <prop key="hibernate.c3p0.maxPoolSize">20</prop>
                <prop key="hibernate.c3p0.timeout">600</prop>
                <prop key="hibernate.c3p0.max_statement">50</prop>
                <prop key="hibernate.c3p0.testConnectionOnCheckout">false</prop>
				<prop key="hibernate.validator.apply_to_ddl">false</prop>
                <prop key="hibernate.validator.autoregister_listeners">false</prop>

            </props>
        </property>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <ref bean="hibernateProperties" />
        </property>
        <property name="annotatedClasses">
            <list>
                
                <value>com.amclos.model.Funcion</value>
                <value>com.amclos.model.FuncionPerfil</value>
                <value>com.amclos.model.FuncionPerfilPK</value>
                <value>com.amclos.model.Indicador</value>
                <value>com.amclos.model.Institucion</value>
                <value>com.amclos.model.InstitucionVariable</value>
                <value>com.amclos.model.InstitucionVariablePK</value>
                 <value>com.amclos.model.Menu</value>
                <value>com.amclos.model.MenuPerfil</value>
                <value>com.amclos.model.MenuPerfilPK</value>
                <value>com.amclos.model.OpcionesRespuesta</value>
                <value>com.amclos.model.Parametro</value>
                <value>com.amclos.model.Perfil</value>
                <value>com.amclos.model.Preguntas</value>
                <value>com.amclos.model.Respuesta</value>
                <value>com.amclos.model.RespuestaPK</value>
                <value>com.amclos.model.Riesgos</value>
                <value>com.amclos.model.RiesgosPK</value>
                <value>com.amclos.model.SubIndicador</value>
                <value>com.amclos.model.Tipos</value>
                <value>com.amclos.model.Usuario</value>
                <value>com.amclos.model.UsuarioPerfil</value>
                <value>com.amclos.model.UsuarioPerfilPK</value>
                <value>com.amclos.model.Variable</value>
                <value>com.amclos.model.ZonaGeografica</value>
                <value>com.amclos.model.Periodos</value>

            </list>
        </property>
        
    </bean>

